<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFCBC0"
    android:layout_gravity="center_horizontal">

    <View
        android:layout_width="wrap_content"
        android:layout_height="491dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="28dp"
        android:background="#FEB5C0" />

    <TextView
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="130dp"
        android:layout_marginTop="29dp"
        android:text="Add"
        android:textSize="50sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="46dp"
        android:background="#DCD5D8"
        android:text="Back"
        android:textColor="#607D8B"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etAddName"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#78909C"
        android:textSize="20sp"
        tools:ignore="HardcodedText,VisualLintOverlap" />

    <EditText
        android:id="@+id/etAddPrice"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Price"
        android:inputType=""
        android:minHeight="48dp"
        android:textColorHint="#78909C"
        android:textSize="20sp"
        tools:ignore="HardcodedText,VisualLintOverlap" />

    <Button
        android:id="@+id/select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="122dp"
        android:layout_marginBottom="331dp"
        android:background="#DCD5D8"
        android:text="Select image"
        android:textColor="#607D8B"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText,RelativeOverlap,TextSizeCheck" />

    <ImageView
        android:id="@+id/imgGallery"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="152dp"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <Button
        android:id="@+id/uploadentity"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="603dp"
        android:background="#DCD5D8"
        android:text="Upload entity"
        android:textColor="#607D8B"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:ignore="HardcodedText,TextSizeCheck" />

</RelativeLayout>
